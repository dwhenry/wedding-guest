$lightest: #E5E6D3;
$light: #B58389;
$medium: #E19E95;
$dark: #3F1C29;
$darkest: #65324B;

@font-face {
  font-family: 'Sosa';
  src: url('fonts/sosa-regular-webfont.eot');
  src: local('Sosa'), url('fonts/sosa-regular-webfont.svg') format('svg'),
                      url('fonts/sosa-regular-webfont.woff') format('woff'),
                      url('fonts/sosa-regular-webfont.ttf') format('truetype');
}

@font-face {
  font-family: XiomaraScript;
  src: url('fonts/Xiomara-Script.ttf');
}


body {
  background: $medium;
  margin: 0;
  background-image: url(<%= asset_path 'floral_bg.jpg' %>);
  background-repeat: repeat;
}
#cover {
  position: absolute;
  width: 100%;
  background: rgba(#E19E95, 0.8);
  top: 0px;
  overflow: hidden;
}
#screen {
  max-width: 62em;
  margin: 0.625em auto;
  background: rgba(#FFF, 0.8);
  background: #EED8CE;
  padding: 5px;

  border: white 1px solid;
  border-radius: 20px;
  -moz-border-radius: 20px;
  -webkit-border-radius: 20px;

  #padding {
    overflow: hidden;
    padding: 1%;
    border: solid 3px $dark;
    border-radius: 16px;
    -moz-border-radius: 16px;
    -webkit-border-radius: 16px;

  }
}

table#recaptcha_table {
  width: 250px;
}

h1 {
  font-family: XiomaraScript;
  padding: 0.5176% 1.553%;

  // padding: 5px 0 10px 15px;
  margin: 0;
  color: $darkest;
  font-size: 1.75em;

  @media all and (max-width: 600px) {
    font-size: 1.25em;
  }

  .countdown {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 0.624em;
  }
}

#buttons {
  float: right;
  padding: 15px;

  @media all and (max-width: 750px) {
    display: none !important;
  }

  form {
    display: inline-block;
  }
}

#body {
  font-family: Arial, Helvetica, sans-serif;
  padding: 0.5176% 1.553%;
  overflow: hidden;

  #sidebar {
    ul {
      padding: 0;
      list-style-type: none;

      li {
        margin: 5px 0;
        background-color: $lightest;

        &.selected {
          background: #EED8CE;
          margin-right: -3px;
        }

        &:hover {
          background-color: $medium;
        }

        &.external {
          ul { display: none }
          &.selected ul {
            display: block;
          }
        }
      }
    }

    @media all and (max-width: 650px) {
      h3 {
        // display: inline-block;
        margin: 0;
      }
      // float: left;

      ul {
        display: inline-block;
        margin: 0;

        li {
          float: left;
          display: inline-block;
          border-right: solid 2px $medium;
          // border-right: none;
          // border-radius: 10px;
          // -moz-border-radius: 10px;
          // -webkit-border-radius: 10px;
          padding: 5px;
          font-size: 0.5em;

          &:last-child {
            border-right: none;

          }
        }

      }
    }

    @media all and (min-width: 651px) {
      float: left;
      width: 21.367%;
      border-right: 3px solid $medium;
      padding: 10px 0;
      min-height: 10%;

      ul {

        li {
          display: block;
          border: solid 3px $medium;
          border-right: none;
          border-radius: 10px 0 0 10px;
          -moz-border-radius: 10px 0 0 10px;
          -webkit-border-radius: 10px 0 0 10px;
          padding: 5px 0 5px 10px;
        }
      }
    }
  }

  #main {
    @media all and (min-width: 651px) {
      float: right;
      width: 75.855%;
      padding-left: 2.136%;
    }
    padding-top: 2.136%;
    line-height: 2em;

    table {
      line-height: 1.3em;
    }

    h2 {
      font-family: XiomaraScript;
      color: #666;
    }
  }
}

#flash {
  border-top: 3px solid #BBB;
  p {
    margin: 5px;
    color: #666;
  }
}

