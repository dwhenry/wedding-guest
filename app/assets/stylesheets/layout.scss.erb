$lightest: #E5E6D3;
$light: #B58389;
$medium: #E19E95;
$dark: #3F1C29;
$darkest: #65324B;

@font-face {
  font-family: 'Sosa';
  src: url('fonts/sosa-regular-webfont.eot');
  src: local('Sosa'), url('fonts/sosa-regular-webfont.svg') format('svg'),
                      url('fonts/sosa-regular-webfont.woff') format('woff'),
                      url('fonts/sosa-regular-webfont.ttf') format('truetype');
}

@font-face {
  font-family: XiomaraScript;
  src: url('fonts/Xiomara-Script.ttf');
}


body {
  background: $medium;
  margin: 0;
  background-image: url(<%= asset_path 'floral_bg.jpg' %>);
  background-repeat: repeat;
}
#cover {
  position: absolute;
  width: 100%;
  background: rgba(#E19E95, 0.8);
  top: 0px;
  overflow: hidden;
}
#screen {
  width: 1000px;
  margin: 10px auto;
  background: rgba(#FFF, 0.8);
  background: #EED8CE;
  // padding: 20px 40px;
  padding: 5px;

  border: white 1px solid;
  border-radius: 20px;
  -moz-border-radius: 20px;
  -webkit-border-radius: 20px;

  #padding {
    overflow: hidden;
    padding: 10px;
    border: solid 3px $dark;
    border-radius: 16px;
    -moz-border-radius: 16px;
    -webkit-border-radius: 16px;

  }
}

h1 {
  border-bottom: $dark 2px solid;
  padding: 5px 0 20px 15px;
  margin: 0 0 20px 0;
  color: $darkest;
}

#buttons {
  float: right;
  padding: 15px;

  form {
    display: inline-block;
  }
}

#body {
  font-family: Arial, Helvetica, sans-serif;
  padding: 5px 15px;
  overflow: hidden;

  #sidebar {
    float: left;
    width: 200px;
    border-right: 3px solid $medium;
    padding: 10px 0;
    min-height: 100px;

    ul {
      list-style-type: none;
      padding: 0;

      ol {
        display: block;
        padding: 5px 0 5px 10px;
        margin: 5px 0;

      }

      li {
        display: block;
        border: solid 3px $medium;
        border-right: none;
        border-radius: 10px 0 0 10px;
        -moz-border-radius: 10px 0 0 10px;
        -webkit-border-radius: 10px 0 0 10px;
        padding: 5px 0 5px 10px;
        margin: 5px 0;
        background-color: $lightest;

        &.selected {
          background: #EED8CE;
          margin-right: -3px;
        }

        &:hover {
          background-color: $medium;
        }

        &.external {
          ul { display: none }
          &.selected ul {
            display: block;
          }
        }
      }
    }
  }

  #main {
    float: right;
    width: 710px;
    padding-left: 20px;
    line-height: 2em;

    table {
      line-height: 1.3em;
    }

    h2 {
      font-family: XiomaraScript;
      color: #666;
    }
  }
}

#flash {
  border-top: 3px solid #BBB;
  p {
    margin: 5px;
    color: #666;
  }
}
