$lightest: #E5E6D3;
$light: #B58389;
$medium: #E19E95;
$dark: #3F1C29;
$darkest: #65324B;

body {
  background: $medium;
  margin: 0;
  background-image: url(<%= asset_path 'floral_bg.jpg' %>);
  background-repeat: repeat;
  filter: alpha(opacity=90);
  opacity: 0.90;

}
#cover {
  position: absolute;
  width: 100%;
  background: $medium;
  top: 0px;
  bottom: 0px;
  overflow: hidden;
}
#screen {
  width: 1000px;
  margin: 10px auto;
  background: white;
  // padding: 20px 40px;
  padding: 5px;

  border: white 1px solid;
  border-radius: 20px;
  -moz-border-radius: 20px;
  -webkit-border-radius: 20px;

  #padding {
    overflow: hidden;
    padding: 10px;
    border: solid 3px $dark;
    border-radius: 16px;
    -moz-border-radius: 16px;
    -webkit-border-radius: 16px;

  }
}

h1 {
  border-bottom: $dark 2px solid;
  padding: 5px 0 20px 15px;
  margin: 0 0 20px 0;
  color: $darkest;
}

#buttons {
  float: right;
  padding: 15px;
}

#body {
  font-family: Arial, Helvetica, sans-serif;
  padding: 5px 15px;
  overflow: hidden;

  #sidebar {
    float: left;
    width: 200px;
    border-right: 3px solid $medium;
    padidng: 10px 0;
    min-height: 30px;

    ul {
      list-style-type: none;
      padding: 0;

      li {
        display: block;
        border: solid 3px $medium;
        border-right: none;
        border-radius: 10px 0 0 10px;
        -moz-border-radius: 10px 0 0 10px;
        -webkit-border-radius: 10px 0 0 10px;
        padding: 5px 0 5px 10px;
        margin: 5px 0;
        background-color: $lightest;

        &.selected {
          background-color: white;
          margin-right: -3px;
        }

        &:hover {
          background-color: $medium;
        }
      }
    }
  }

  #main {
    float: right;
    width: 710px;
    padding-left: 20px;
  }
}


