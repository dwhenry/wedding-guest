.image
  .label
    = f.label :image
  .value
    - if @wedding.image?
      .tag{:style => "background-image: url(#{@wedding.image_url})"}
  .value
    = f.file_field :image
    = f.hidden_field :image_cache


= labeled_selecter_with_error(f, :detail_type, label: 'Type', items: Detail.types)
= labeled_text_area_with_error(f, :detail_text, label: 'Text')

